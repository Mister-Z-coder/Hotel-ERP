@model Agent
@{
    ViewData["Title"] = "Agent";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Nouveau Agent</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" enctype="multipart/form-data" class="row">
            <div class="p-3">
                <div class="form-floating py-3 col-12">
                    <div class="alert alert-info" role="alert">
                        <strong>Liste des rôles :</strong>
                        <ul class="mb-0">
                            <li>
                                ADMINISTRATEUR : CONFIGURATION, AGENT, CAISSE, SHIFT, CLIENT, FOURNISSEUR, REGLEMENT.
                            </li>
                            <li>
                                SUPERVISEUR : CHAMBRE, CLIENT, PAYEMENT (RESERVATION), RESERVATION.
                            </li>
                            <li>
                                GESTIONNAIRE : ALIMENT, BOISSON, SERVICE, BRASSERIE, CATEGORIE BOISSON.
                            </li>
                            <li>
                                CAISSIER : POINT DE VENTE.
                            </li>
                            <li>
                                RECEPTIONNISTE : CLIENT, CHAMBRE (CONSULTATION), PAYEMENT(RESERVATION), RESERVATION.
                            </li>
                        </ul>
                    </div>
                </div>
                <div asp-validation-summary="None"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="NomAgent" class="form-control border" />
                    <label asp-for="NomAgent" class="m-2"></label>
                    <span asp-validation-for="NomAgent" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="PrenomAgent" class="form-control border" />
                    <label asp-for="PrenomAgent" class="m-2"></label>
                    <span asp-validation-for="PrenomAgent" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <div class="border p-3 rounded">
                        <label asp-for="SexeAgent" class="form-label text-muted"></label>
                        <div class="form-check">
                            <input asp-for="SexeAgent" class="form-check-input" type="radio" id="SexeM" value="M">
                            <label class="form-check-label" for="SexeM">
                                Masculin
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="SexeAgent" class="form-check-input" type="radio" id="SexeF" value="F">
                            <label class="form-check-label" for="SexeF">
                                Feminin
                            </label>
                        </div>
                        <span asp-validation-for="SexeAgent" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Lieu_nais_Agent" class="form-control border" />
                    <label asp-for="Lieu_nais_Agent" class="m-2"></label>
                    <span asp-validation-for="Lieu_nais_Agent" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="date" asp-for="Date_nais_Agent" class="form-control border" />
                    <label asp-for="Date_nais_Agent" class="m-2"></label>
                    <span asp-validation-for="Date_nais_Agent" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Nationalite_Agent" class="form-control border" />
                    <label asp-for="Nationalite_Agent" class="m-2"></label>
                    <span asp-validation-for="Nationalite_Agent" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Fonction_Agent" class="form-select border">
                        <option disabled selected>--Selectionnez la fonction de l'agent--</option>
                        <option>ADMIN</option>
                        <option>ADMINISTRATEUR</option>
                        <option>SUPERVISEUR</option>
                        <option>GESTIONNAIRE</option>
                        <option>CAISSIER</option>
                        <option>RECEPTIONNISTE</option>
                        <option>SERVEUR</option>
                        <option>CUISINIER</option>
                        <option>BARMAN</option>
                        <option>NETTOYEUR</option>
                        <option>TECHNICIEN</option>
                        <option>HUISSIER</option>
                        <option>DJ</option>
                        <option>AUTRE</option>
                    </select>
                    <label asp-for="Fonction_Agent" class="m-2"></label>
                    <span asp-validation-for="Fonction_Agent" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="file" asp-for="PhotoAgent" class="form-control border" accept=".jpg" />
                    <label asp-for="PhotoAgent" class="m-2"></label>
                    <span asp-validation-for="PhotoAgent" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Créer
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Agent" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

