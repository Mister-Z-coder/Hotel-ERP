@model AgentViewModel
@{
    ViewData["Title"] = "Agent";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Liste des Agents</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <div class="row pb-3">
            <div class="form-floating py-3 col-12">
                <div class="alert alert-info" role="alert">
                    <strong>Liste des rôles :</strong>
                    <ul class="mb-0">
                        <li>
                            ADMINISTRATEUR : CONFIGURATION, AGENT, CAISSE, SHIFT, CLIENT, FOURNISSEUR, REGLEMENT.
                        </li>
                        <li>
                            SUPERVISEUR : CHAMBRE, CLIENT, PAYEMENT (RESERVATION), RESERVATION.
                        </li>
                        <li>
                            GESTIONNAIRE : ALIMENT, BOISSON, SERVICE, BRASSERIE, CATEGORIE BOISSON.
                        </li>
                        <li>
                            CAISSIER : POINT DE VENTE.
                        </li>
                        <li>
                            RECEPTIONNISTE : CLIENT, CHAMBRE (CONSULTATION), PAYEMENT(RESERVATION), RESERVATION.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-4 text-end">
                <form asp-controller="Agent" asp-action="Index" class="col-12 col-lg-auto mb-3 mb-lg-0" method="get">
                    <input type="search" class="form-control" placeholder="Rechercher..." asp-for="SearchString" aria-label="Rechercher">
                </form>
            </div>
            <div class="col-8 text-end">
                <a class="btn btn-secondary" asp-controller="Agent" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> 
                    Nouveau agent
                </a>
            </div>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th class="text-center align-middle">N°</th>
                    <th class="text-center align-middle">Nom</th>
                    <th class="text-center align-middle">Prénom</th>
                    <th class="text-center align-middle">Sexe</th>
                    <th class="text-center align-middle">Lieu de naissance</th>
                    <th class="text-center align-middle">Date de naissance</th>
                    <th class="text-center align-middle">Nationalité</th>
                    <th class="text-center align-middle">Fonction</th>
                    <th class="text-center align-middle">Photo</th>
                    <th class="text-center align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agent in Model.Agent)
                {
                    <tr>
                        <td class="text-center align-middle fw-bold">@ViewBag.NumAff</td>
                        <td class="text-center align-middle">@agent.NomAgent</td>
                        <td class="text-center align-middle">@agent.PrenomAgent</td>
                        <td class="text-center align-middle">@agent.SexeAgent</td>
                        <td class="text-center align-middle">@agent.Lieu_nais_Agent</td>
                        <td class="text-center align-middle">@agent.Date_nais_Agent.ToShortDateString()</td>
                        <td class="text-center align-middle">@agent.Nationalite_Agent</td>
                        <td class="text-center align-middle">@agent.Fonction_Agent</td>

                        <td class="text-center align-middle">
                            @if (!string.IsNullOrEmpty(agent.PhotoPath))
                            {
                                <div style="max-width: 100px;">
                                    <img src="@Url.Content("~/images/agents/"+agent.PhotoPath)" alt="Photo de l'agent" class="img-fluid" style="width: 100%; height: 100px; object-fit: cover;" onclick="openModal(this.src)" />
                                </div>

                            }
                            else
                            {
                                <p>Pas de photo</p>
                            }
                        </td>

                        <td class="text-center align-middle">
                            <div class="d-flex justify-content-center gap-2" role="group">
                                <a asp-controller="Agent" asp-action="Details" asp-route-agentId="@agent.AgentId" class="btn btn-warning text-white">
                                    <i class="bi bi-info-circle"></i>  Détails
                                </a>
                                <a asp-controller="Agent" asp-action="Update" asp-route-agentId="@agent.AgentId" class="btn btn-success">
                                    <i class="bi bi-pencil-square"></i> Modifier
                                </a>
                                <a asp-controller="Agent" asp-action="Delete" asp-route-agentId="@agent.AgentId" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                    ViewBag.NumAff++;
                }
            </tbody>
        </table>
    </div>
    <!-- Modal pour visionnage de la photo -->
    <div id="imageModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(0,0,0,0.8); z-index:1000; justify-content:center; align-items:center;">
        <span onclick="closeModal()" style="color: white; position: absolute; top: 20px; right: 30px; cursor: pointer;">&times;</span>
        <img id="modalImage" style="max-width: 90%; max-height: 90%;" />
    </div>

    <div class="card-footer border-0 p-4">
        <div class="row">
            <div class="col-6 text-left">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item @(ViewBag.Currentpage==1 ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage -1)">Précedent</a>
                        </li>

                        <li class="page-item"><a class="page-link" href="#">@ViewBag.CurrentPage</a></li>

                        <li class="page-item @(ViewBag.TotalPage<=ViewBag.CurrentPage ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage +1)">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}


