@model MouvementViewModel
@{
    ViewData["Title"] = "Mouvements";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Details Mouvement</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" class="row">
            <div class="p-3">
                <input asp-for="Mouvements.MouvementId" hidden />
                <div asp-validation-summary="None"></div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Mouvements.AgentId" disabled class="form-select border" asp-items="Model.AgentList">
                        <option disabled selected>--Selectionnez l'agent--</option>
                    </select>
                    <input type="hidden" asp-for="Mouvements.AgentId" class="form-control border" />
                    <label asp-for="Mouvements.AgentId" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Mouvements.TypeMouvementId" disabled class="form-select border" asp-items="Model.TypeMouvementList">
                        <option disabled selected>--Selectionnez le type de mouvement--</option>
                    </select>
                    <input type="hidden" asp-for="Mouvements.TypeMouvementId" class="form-control border" />
                    <label asp-for="Mouvements.TypeMouvementId" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="date" disabled asp-for="Mouvements.DateMouvement" class="form-control border" />
                    <label asp-for="Mouvements.DateMouvement" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="time" disabled asp-for="Mouvements.HeureMouvement" class="form-control border" />
                    <label asp-for="Mouvements.HeureMouvement" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Mouvements.NatureMouvement" class="form-control border" />
                    <label asp-for="Mouvements.NatureMouvement" class="m-2"></label>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-header bg-dark-subtle ml-0 py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-black">Aliments mouvementé</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating py-1 col-12">
                            @*<select class="form-select border h-50" size="10" aria-label="size 3 select example" asp-items="Model.FournirList">
        </select>*@
                            <div style="max-height: 250px; overflow-y: auto;">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center align-middle">N°</th>
                                            <th class="text-center align-middle">Titre aliment</th>
                                            <th class="text-center align-middle">Quantité demandée</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int j = 1;
                                            string type = "";
                                            type = "aliment";}
                                        @foreach (var mouvoir in Model.Mouvoir)
                                        {
                                            <tr>
                                                <td class="text-center align-middle fw-bold">@j</td>
                                                <td class="text-center align-middle">@mouvoir.Aliment.TitreAliment</td>
                                                <td class="text-center align-middle">@mouvoir.QteMouv</td>
                                            </tr>
                                            j++;

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card-header bg-dark-subtle ml-0 py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-black">Boissons mouvementé</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating py-1 col-12">
                            @*<select class="form-select border h-50" size="10" aria-label="size 3 select example" asp-items="Model.ProcurerList">
        </select>*@
                            <div style="max-height: 250px; overflow-y: auto;">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center align-middle">N°</th>
                                            <th class="text-center align-middle">Titre boisson</th>
                                            <th class="text-center align-middle">Quantité demandée</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int i = 1;
                                            type = "boisson";}
                                        @foreach (var bouger in Model.Bouger)
                                        {
                                            <tr>
                                                <td class="text-center align-middle fw-bold">@i</td>
                                                <td class="text-center align-middle">@bouger.Boisson.TitreBoisson</td>
                                                <td class="text-center align-middle">@bouger.QteBouger</td>
                                            </tr>
                                            i++;

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>




                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <a asp-controller="Mouvement" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                        </div>
                    </div>
                </div>
</form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

