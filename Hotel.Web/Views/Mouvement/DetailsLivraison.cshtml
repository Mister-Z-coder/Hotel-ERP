@model DemandeViewModel
@{
    ViewData["Title"] = "Mouvement";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Détails mouvement Livraison</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" class="row">
            <div class="p-3">
                <input asp-for="Demandes.DemandeId" hidden id="demandeId"  />
                <div asp-validation-summary="None"></div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Demandes.AgentId" disabled class="form-select border" asp-items="Model.AgentList">
                        <option disabled selected>--Selectionnez l'agent--</option>
                    </select>
                    <input type="hidden" asp-for="Demandes.AgentId" class="form-control border" />
                    <label asp-for="Demandes.AgentId" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="date" disabled asp-for="Demandes.DateDemande" class="form-control border" />
                    <label asp-for="Demandes.DateDemande" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Demandes.TypeDemande" disabled class="form-select border">
                        <option disabled selected>--Selectionnez le type de demande--</option>
                        <option>APPROVISIONNEMENT</option>
                        <option>AJOUT</option>
                    </select>
                    <label asp-for="Demandes.TypeDemande" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Demandes.EtatDemande" class="form-control border" />
                    <label asp-for="Demandes.EtatDemande" class="m-2"></label>
                </div>


                <div class="form-floating py-1 col-12">
                    <select asp-for="Livraisons.TypeMouvementId" disabled class="form-select border" asp-items="Model.TypeMouvementList">
                        <option disabled selected>--Selectionnez le type de mouvement--</option>
                    </select>
                    <input type="hidden" asp-for="Livraisons.TypeMouvementId" class="form-control border" />
                    <label asp-for="Livraisons.TypeMouvementId" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Livraisons.FournisseurId" disabled class="form-select border" asp-items="Model.FournisseurList">
                        <option disabled selected>--Selectionnez le fournisseur--</option>
                    </select>
                    <input type="hidden" asp-for="Livraisons.FournisseurId" class="form-control border" />
                    <label asp-for="Livraisons.FournisseurId" class="m-2"></label>
                    <span asp-validation-for="Livraisons.FournisseurId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="date" disabled asp-for="Livraisons.DateLivraison" class="form-control border" />
                    <label asp-for="Livraisons.DateLivraison" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="time" disabled asp-for="Livraisons.HeureLivraison" class="form-control border" />
                    <label asp-for="Livraisons.HeureLivraison" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Livraisons.NatureMouvement" disabled class="form-select border">
                        <option disabled selected>--Selectionnez la nature du mouvement--</option>
                        <option>LIVRAISON</option>
                        <option>DECLASSEMENT</option>
                        <option>SORTIE POUR AJOUT</option>
                    </select>
                    <label asp-for="Livraisons.NatureMouvement" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" disabled asp-for="Livraisons.MontantLivraison" class="form-control border" />
                    <label asp-for="Livraisons.MontantLivraison" class="m-2"></label>
                    <span asp-validation-for="Livraisons.MontantLivraison" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-header bg-dark-subtle ml-0 py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-black">Aliments demandées</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating py-1 col-12">
                            @*<select class="form-select border h-50" size="10" aria-label="size 3 select example" asp-items="Model.FournirList">
                    </select>*@
                            <div style="max-height: 250px; overflow-y: auto;">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center align-middle">N°</th>
                                            <th class="text-center align-middle">Titre aliment</th>
                                            <th class="text-center align-middle">Quantité demandée</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int j = 1;
                                            string type = "";
                                            type = "aliment";}
                                        @foreach (var comporter in Model.Comporter)
                                        {
                                            <tr>
                                                <td class="text-center align-middle fw-bold">@j</td>
                                                <td class="text-center align-middle">@comporter.Aliment.TitreAliment</td>
                                                <td class="text-center align-middle">@comporter.QteOrdone</td>

                                            </tr>
                                            j++;

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card-header bg-dark-subtle ml-0 py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-black">Boissons demandées</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating py-1 col-12">
                            @*<select class="form-select border h-50" size="10" aria-label="size 3 select example" asp-items="Model.ProcurerList">
                    </select>*@
                            <div style="max-height: 250px; overflow-y: auto;">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center align-middle">N°</th>
                                            <th class="text-center align-middle">Titre boisson</th>
                                            <th class="text-center align-middle">Quantité demandée</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int i = 1;
                                            type = "boisson";}
                                        @foreach (var comprendre in Model.Comprendre)
                                        {
                                            <tr>
                                                <td class="text-center align-middle fw-bold">@i</td>
                                                <td class="text-center align-middle">@comprendre.Boisson.TitreBoisson</td>
                                                <td class="text-center align-middle">@comprendre.QteDemande</td>
                                            </tr>
                                            i++;

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="button" class="btn btn-secondary w-100" onclick="SelectedLivraisonOne()">
                                <i class="bi bi-printer"></i>
                                Rapport
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Mouvement" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                        </div>
                    </div>

</form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

