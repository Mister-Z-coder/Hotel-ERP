@model Service
@{
    ViewData["Title"] = "Service";
}
<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Nouveau Service</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" enctype="multipart/form-data" class="row">
            <div class="p-3">
                <div asp-validation-summary="None"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="NomService" class="form-control border" />
                    <label asp-for="NomService" class="m-2"></label>
                    <span asp-validation-for="NomService" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <textarea asp-for="DescriptionService" class="form-control border" style="max-height:100px; min-height:100px;"></textarea>
                    <label asp-for="DescriptionService" class="m-2"></label>
                    <span asp-validation-for="DescriptionService" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="PrixService" class="form-control border" />
                    <label asp-for="PrixService" class="m-2"></label>
                    <span asp-validation-for="PrixService" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="file" asp-for="PhotoService" class="form-control border" accept=".jpg" />
                    <label asp-for="PhotoService" class="m-2"></label>
                    <span asp-validation-for="PhotoService" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Créer
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Service" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

