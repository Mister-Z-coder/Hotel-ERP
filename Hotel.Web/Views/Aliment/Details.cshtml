@model AlimentViewModel
@{
    ViewData["Title"] = "Aliment";
}
<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Details Aliment</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" class="row">
            <input asp-for="Aliment.AlimentId" hidden />
            <div class="p-3">
                <div class="row">
                    <div class="form-floating py-1 col-8">
                        <div asp-validation-summary="None"></div>
                        <div class="form-floating py-1 col-12">
                            <input asp-for="Aliment.TitreAliment" disabled class="form-control border" />
                            <label asp-for="Aliment.TitreAliment" class="m-2"></label>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <select asp-for="Aliment.UniteAliment"  disabled class="form-select border">
                                <option disabled selected>--Selectionnez l'unité de l'aliment--</option>
                                <option>PIECE</option>
                                <option>KILOGRAMME (KG)</option>
                                <option>GRAMMES (G)</option>
                                <option>LITRE (L)</option>
                                <option>PORTION</option>
                                <option>PAQUET</option>
                                <option>BARQUETTE</option>
                                <option>TASSE</option>
                                <option>LOT</option>
                                <option>BOCAL</option>
                                <option>BAR</option>
                                <option>PISTOLET</option>
                                <option>RAME</option>
                                <option>ASSIETTE</option>
                                <option>PLAT</option>
                            </select>
                            <label asp-for="Aliment.UniteAliment" class="m-2"></label>
                            <span asp-validation-for="Aliment.UniteAliment" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <input type="number" asp-for="Aliment.PrixUnitAliment" disabled class="form-control border" />
                            <label asp-for="Aliment.PrixUnitAliment" class="m-2"></label>
                        </div>
                        <div class="form-floating py-1 col-12">
                            <input type="number" asp-for="Aliment.QuantiteStock" disabled class="form-control border" />
                            <label asp-for="Aliment.QuantiteStock" class="m-2"></label>
                        </div>

                    </div>
                    <div class="form-floating py-1 col-4">
                        <div style="max-width: auto;">
                            <img src="@Url.Content("~/"+Model.Aliment.PhotoPath)" alt="Photo de l'aliment'" class="img-fluid" style="width: auto; height: 240px; object-fit: cover;" onclick="openModal(this.src)" />
                        </div>
                    </div>
                </div>
                <div class="card-header bg-dark-subtle ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h4 class="text-black">Historique Prix Unitaire</h4>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Date historique</th>
                            <th>Prix Unitaire($)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var aliment in Model.HPrixUnitAlimentList)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@aliment.DateHisto</td>
                                <td>@aliment.PrixUnitAliment.00 $</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Aliment" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

