@model AlimentViewModel
@{
    ViewData["Title"] = "Aliment";
}
<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Mettre à jour Aliments</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" enctype="multipart/form-data" class="row">
            <input asp-for="Aliment.AlimentId" hidden />
            <div class="p-3">
                <div asp-validation-summary="None"></div>


                <div class="form-floating py-1 col-12">
                    <input asp-for="Aliment.TitreAliment" class="form-control border" />
                    <label asp-for="Aliment.TitreAliment" class="m-2"></label>
                    <span asp-validation-for="Aliment.TitreAliment" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Aliment.UniteAliment" class="form-select border">
                        <option disabled selected>--Selectionnez l'unité de l'aliment--</option>
                        <option>PIECE</option>
                        <option>KILOGRAMME (KG)</option>
                        <option>GRAMMES (G)</option>
                        <option>LITRE (L)</option>
                        <option>PORTION</option>
                        <option>PAQUET</option>
                        <option>BARQUETTE</option>
                        <option>TASSE</option>
                        <option>LOT</option>
                        <option>BOCAL</option>
                        <option>BAR</option>
                        <option>PISTOLET</option>
                        <option>RAME</option>
                        <option>ASSIETTE</option>
                        <option>PLAT</option>
                    </select>
                    <label asp-for="Aliment.UniteAliment" class="m-2"></label>
                    <span asp-validation-for="Aliment.UniteAliment" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="Aliment.PrixUnitAliment" class="form-control border" />
                    <label asp-for="Aliment.PrixUnitAliment" class="m-2"></label>
                    <span asp-validation-for="Aliment.PrixUnitAliment" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="Aliment.QuantiteStock" class="form-control border" />
                    <label asp-for="Aliment.QuantiteStock" class="m-2"></label>
                    <span asp-validation-for="Aliment.QuantiteStock" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="file" asp-for="Aliment.PhotoAliment" class="form-control border" accept=".jpg" />
                    <label asp-for="Aliment.PhotoAliment" class="m-2"></label>
                    <input asp-for="Aliment.PhotoPath" hidden />
                    <span asp-validation-for="Aliment.PhotoAliment" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Modifier
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Aliment" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

