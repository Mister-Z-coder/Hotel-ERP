@model UserAgentViewModel
@{
    ViewData["Title"] = "Utilisateur";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Mettre à jour Utilisateur</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="User.Username" class="form-control border" />
                    <label asp-for="User.Username" class="m-2"></label>
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="password" asp-for="User.Password" class="form-control border" />
                    <label asp-for="User.Password" class="m-2"></label>
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="User.AgentId" class="form-select border" asp-items="Model.AgentList">
                        <option disabled selected>--Selectionnez l'agent--</option>
                    </select>
                    <label asp-for="User.AgentId" class="m-2"></label>
                    <span asp-validation-for="User.AgentId" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Créer
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

