@model IEnumerable<Caisse>
@{
    ViewData["Title"] = "Caisse";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Liste des Caisses</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a class="btn btn-secondary" asp-controller="PosteTravail" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> 
                    Nouvelle Caisse
                </a>
            </div>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th class="text-center align-middle">N°</th>
                    <th class="text-center align-middle">Titre Poste</th>
                    <th class="text-center align-middle">Titre Caisse</th>
                    <th class="text-center align-middle">Bar Caisse</th>
                    <th class="text-center align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var caisse in Model)
                {
                    <tr>
                        <td class="text-center align-middle fw-bold">@ViewBag.NumAff</td>
                        <td class="text-center align-middle">@caisse.TitrePosteTravail</td>
                        <td class="text-center align-middle">@caisse.TitreCaisse</td>
                        <td class="text-center align-middle">@caisse.BarCaisse</td>


                        <td class="text-center align-middle">
                            <div class="d-flex justify-content-center gap-2" role="group">
                                <a asp-controller="Caisse" asp-action="Details" asp-route-postetravId="@caisse.PosteTravailId" class="btn btn-warning text-white">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-controller="Caisse" asp-action="Update" asp-route-postetravId="@caisse.PosteTravailId" class="btn btn-success">
                                    <i class="bi bi-pencil-square"></i> Modifier
                                </a>
                                <a asp-controller="Caisse" asp-action="Delete" asp-route-postetravId="@caisse.PosteTravailId" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                    ViewBag.NumAff++;
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer border-0 p-4">
        <div class="row">
            <div class="col-6 text-left">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item @(ViewBag.Currentpage==1 ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage -1)">Précedent</a>
                        </li>

                        <li class="page-item"><a class="page-link" href="#">@ViewBag.CurrentPage</a></li>

                        <li class="page-item @(ViewBag.TotalPage<=ViewBag.CurrentPage ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage +1)">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>


