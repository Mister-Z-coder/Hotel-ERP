@model ChambreViewModel
@{
    ViewData["Title"] = "Chambre";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Liste des Chambres</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <div class="row pb-3">
            <div class="col-4 text-end">
                <form asp-controller="Chambre" asp-action="Index" class="col-12 col-lg-auto mb-3 mb-lg-0" method="get">
                    <input type="search" class="form-control" placeholder="Rechercher..." asp-for="SearchString" aria-label="Rechercher">
                </form>
            </div>
            <div class="col-8 text-end">
                <a class="btn btn-secondary" asp-controller="Chambre" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> 
                    Nouvelle chambre
                </a>
            </div>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th class="text-center align-middle">N°</th>
                    <th class="text-center align-middle">Numéro chambre</th>
                    <th class="text-center align-middle">Type chambre</th>
                    <th class="text-center align-middle">Prix nuit</th>
                    <th class="text-center align-middle">Prix heure</th>
                    <th class="text-center align-middle">Statut chambre</th>
                    <th class="text-center align-middle">Capcité maximale</th>
                    <th class="text-center align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var chambre in Model.Chambre)
                {
                    <tr>
                        <td class="text-center align-middle fw-bold">@ViewBag.NumAff</td>
                        <td class="text-center align-middle">@chambre.NumeroChambre</td>
                        <td class="text-center align-middle">@chambre.TypeChambre</td>
                        <td class="text-center align-middle">@chambre.PrixNuit $</td>
                        <td class="text-center align-middle">@chambre.PrixHeure $</td>
                        <td class="text-center align-middle">
                            @if (chambre.StatutChambre.Contains("Occupe"))
                            {<span class="badge text-bg-danger rounded-pill">@chambre.StatutChambre</span>}
                        else
                        {<span class="badge text-bg-success rounded-pill">@chambre.StatutChambre</span>}
                    </td>
                    <td class="text-center align-middle">@chambre.CapaciteMaxChambre</td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center gap-2" role="group">
                            <a asp-controller="Chambre" asp-action="Details" asp-route-chambreId="@chambre.ChambreId" class="btn btn-warning text-white">
                                <i class="bi bi-info-circle"></i>  Détails
                            </a>
                            <a asp-controller="Chambre" asp-action="Update" asp-route-chambreId="@chambre.ChambreId" class="btn btn-success">
                                <i class="bi bi-pencil-square"></i> Modifier
                            </a>
                            <a asp-controller="Chambre" asp-action="Delete" asp-route-chambreId="@chambre.ChambreId" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Supprimer
                            </a>
                        </div>
                    </td>
                </tr>
                ViewBag.NumAff++;
            }
            </tbody>
        </table>
    </div>
    <div class="card-footer border-0 p-4">
        <div class="row">
            <div class="col-6 text-left">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item @(ViewBag.Currentpage==1 ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage -1)">Précedent</a>
                        </li>

                        <li class="page-item"><a class="page-link" href="#">@ViewBag.CurrentPage</a></li>

                        <li class="page-item @(ViewBag.TotalPage<=ViewBag.CurrentPage ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage +1)">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>


