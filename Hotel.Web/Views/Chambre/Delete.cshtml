@model Chambre
@{
    ViewData["Title"] = "Chambre";
}
<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Supprimer Chambre</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" class="row">
            <input asp-for="ChambreId" hidden />
            <div class="p-3">
                <div asp-validation-summary="None"></div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="NumeroChambre" disabled class="form-control border" />
                    <label asp-for="NumeroChambre" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="TypeChambre" disabled class="form-control border" />
                    <label asp-for="TypeChambre" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="PrixNuit" disabled class="form-control border" />
                    <label asp-for="PrixNuit" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="PrixHeure" disabled class="form-control border" />
                    <label asp-for="PrixHeure" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <div class="border p-3 rounded">
                        <label asp-for="StatutChambre" class="form-label text-muted"></label>
                        <div class="form-check">
                            <input asp-for="StatutChambre" disabled class="form-check-input" type="radio" id="libre" value="Libre|Sale">
                            <label class="form-check-label" for="libre">
                                Libre
                            </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="StatutChambre" disabled class="form-check-input" type="radio" id="occupe" value="Occupe|Sale">
                            <label class="form-check-label" for="occupe">
                                Occupée
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="CapaciteMaxChambre" disabled class="form-control border" />
                    <label asp-for="CapaciteMaxChambre" class="m-2"></label>
                </div>



                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Supprimer
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Chambre" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

