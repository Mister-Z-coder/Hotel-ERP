@model BoissonViewModel
@{
    ViewData["Title"] = "Boisson";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Liste des Boissons</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <div class="row pb-3">
            <div class="col-4 text-end">
                <form asp-controller="Boisson" asp-action="Index" class="col-12 col-lg-auto mb-3 mb-lg-0" method="get">
                    <input type="search" class="form-control" placeholder="Rechercher..." asp-for="SearchString" aria-label="Rechercher">
                </form>
            </div>
            <div class="col-8 text-end">
                <a class="btn btn-secondary" asp-controller="Boisson" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> 
                    Nouvelle Boisson
                </a>
            </div>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th class="text-center align-middle">N°</th>
                    <th class="text-center align-middle">Titre</th>
                    <th class="text-center align-middle">Categorie</th>
                    <th class="text-center align-middle">Brasserie</th>
                    <th class="text-center align-middle">Unité</th>
                    <th class="text-center align-middle">P.Unit SB</th>
                    <th class="text-center align-middle">P.Unit LB</th>
                    <th class="text-center align-middle">Quantité</th>
                    <th class="text-center align-middle">Photo</th>
                    <th class="text-center align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var boisson in Model.Boissons)
                {
                    <tr>
                        <!-- Aligner le texte au centre et verticalement au milieu -->
                        <td class="text-center align-middle fw-bold">@ViewBag.NumAff</td>
                        <td class="text-center align-middle">@boisson.TitreBoisson</td>
                        <td class="text-center align-middle">@boisson.CategorieBoisson.TitreCategorieBoisson</td>
                        <td class="text-center align-middle">@boisson.Brasserie.TitreBrasserie</td>
                        <td class="text-center align-middle">@boisson.UniteBoisson</td>
                        <td class="text-center align-middle">@boisson.PrixUnitSB.00 $</td>
                        <td class="text-center align-middle">@boisson.PrixUnitLB.00 $</td>
                        <td class="text-center align-middle">@boisson.QuantiteStock</td>
                        <td class="text-center align-middle">
                            @if (!string.IsNullOrEmpty(boisson.PhotoPath))
                            {
                                <div style="max-width: 100px;">
                                    <img src="@Url.Content(boisson.PhotoPath)" alt="Photo de la boisson" class="img-fluid" style="width: 100%; height: 100px; object-fit: cover;" onclick="openModal(this.src)" />
                                </div>
                            }
                            else
                            {
                                <p>Pas de photo</p>
                            }
                        </td>
                        <td class="text-center align-middle">
                            <!-- Utiliser Flexbox pour aligner les boutons horizontalement -->
                            <div class="d-flex justify-content-center gap-2" role="group">
                                <a asp-controller="Boisson" asp-action="Details" asp-route-boissonId="@boisson.BoissonId" class="btn btn-warning text-white">
                                    <i class="bi bi-info-circle"></i>  Détails
                                </a>
                                <a asp-controller="Boisson" asp-action="Update" asp-route-boissonId="@boisson.BoissonId" class="btn btn-success">
                                    <i class="bi bi-pencil-square"></i>  Modier
                                </a>
                                <a asp-controller="Boisson" asp-action="Delete" asp-route-boissonId="@boisson.BoissonId" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>  Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                    ViewBag.NumAff++;
                }
            </tbody>
        </table>
    </div>
    <!-- Modal pour visionnage de la photo -->
    <div id="imageModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(0,0,0,0.8); z-index:1000; justify-content:center; align-items:center;">
        <span onclick="closeModal()" style="color: white; position: absolute; top: 20px; right: 30px; cursor: pointer;">&times;</span>
        <img id="modalImage" style="max-width: 90%; max-height: 90%;" />
    </div>

    <div class="card-footer border-0 p-4">
        <div class="row">
            <div class="col-6 text-left">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item @(ViewBag.Currentpage==1 ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage -1)">Précedent</a>
                        </li>

                        <li class="page-item"><a class="page-link" href="#">@ViewBag.CurrentPage</a></li>

                        <li class="page-item @(ViewBag.TotalPage<=ViewBag.CurrentPage ? "disabled" : "active")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage +1)">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
