@model DemandeViewModel
@{
    ViewData["Title"] = "Demande";
}

<div class="w-100 card">
    <div class="card-header bg-dark-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black">Demander Produits</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-0 p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div class="form-floating py-3 col-12">
                    <div class="alert alert-info" role="alert">
                        <strong>Différents états d'une demande :</strong>
                        <span class="badge text-bg-warning rounded-pill">Brouillon</span>,
                        <span class="badge text-bg-info rounded-pill">Validée</span>,
                        <span class="badge text-bg-success rounded-pill">Livré</span>,
                        <span class="badge text-bg-success rounded-pill">Sortie</span>.
                        <ul class="mb-0">
                            <li>
                                <p>
                                    <span class="badge text-bg-warning rounded-pill">Brouillon</span> : C'est l'état initial d'une demande quelle qu'elle soit (approvisionnement ou ajout).
                                    Elle indique que la demande ne contient aucun produit (boisson, aliment) conformement au type de la demande.
                                </p>
                            <li>
                                <p><span class="badge text-bg-info rounded-pill">Validée</span> : C'est l'état second d'une demnade au dès l'instant où elle porte des produits.</p>
                            </li>
                            <li>
                                <p><span class="badge text-bg-success rounded-pill">Livré</span> : C'est l'état final d'une demande d'approvisionnement, cela signifie que les produits qui ont été portés par la dite demande d'approvisionnement ont tous été livrés.</p>
                            </li>
                            <li>
                                <p><span class="badge text-bg-success rounded-pill">Sortie</span>: C'est l'état final d'une demande d'ajout, cela signifie que les produits qui ont été portés par la dite demande d'ajout ont tous été ajoutés au stock.</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <input asp-for="Demandes.DemandeId" hidden />
                <div asp-validation-summary="None"></div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Demandes.AgentId" disabled class="form-select border" asp-items="Model.AgentList">
                        <option disabled selected>--Selectionnez l'agent--</option>
                    </select>
                    <input type="hidden" asp-for="Demandes.AgentId" class="form-control border" />
                    <label asp-for="Demandes.AgentId" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="date" disabled asp-for="Demandes.DateDemande" class="form-control border" />
                    <label asp-for="Demandes.DateDemande" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Demandes.TypeDemande" disabled class="form-select border">
                        <option disabled selected>--Selectionnez le type de demande--</option>
                        <option>APPROVISIONNEMENT</option>
                        <option>AJOUT</option>
                    </select>
                    <label asp-for="Demandes.TypeDemande" class="m-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Demandes.EtatDemande" class="form-control border" />
                    <label asp-for="Demandes.EtatDemande" class="m-2"></label>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-header bg-dark-subtle ml-0 py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-black">Aliments demandées</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating py-1 col-12">
                            @*<select class="form-select border h-50" size="10" aria-label="size 3 select example" asp-items="Model.FournirList">
                    </select>*@
                            <div style="max-height: 250px; overflow-y: auto;">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center align-middle">N°</th>
                                            <th class="text-center align-middle">Titre aliment</th>
                                            <th class="text-center align-middle">Quantité demandée</th>
                                            <th class="text-center align-middle">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int j = 1;
                                            string type = "";
                                            type = "aliment";}
                                        @foreach (var comporter in Model.Comporter)
                                        {
                                            <tr>
                                                <td class="text-center align-middle fw-bold">@j</td>
                                                <td class="text-center align-middle">@comporter.Aliment.TitreAliment</td>
                                                <td class="text-center align-middle">@comporter.QteOrdone</td>
                                                <td class="text-center align-middle">
                                                    <div class="d-flex justify-content-center gap-2" role="group">
                                                        <button class="btn btn-danger" onclick="dissocierProduitsDemande(@comporter.AlimentId, @Model.Demandes.DemandeId, '@type')">
                                                            <i class="bi bi-trash-fill"></i>  Supprimer
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            j++;

                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card-header bg-dark-subtle ml-0 py-3">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h4 class="text-black">Boissons demandées</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating py-1 col-12">
                            @*<select class="form-select border h-50" size="10" aria-label="size 3 select example" asp-items="Model.ProcurerList">
                    </select>*@
                            <div style="max-height: 250px; overflow-y: auto;">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center align-middle">N°</th>
                                            <th class="text-center align-middle">Titre boisson</th>
                                            <th class="text-center align-middle">Quantité demandée</th>
                                            <th class="text-center align-middle">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int i = 1;
                                            type = "boisson";}
                                        @foreach (var comprendre in Model.Comprendre)
                                        {
                                            <tr>
                                                <td class="text-center align-middle fw-bold">@i</td>
                                                <td class="text-center align-middle">@comprendre.Boisson.TitreBoisson</td>
                                                <td class="text-center align-middle">@comprendre.QteDemande</td>
                                                <td class="text-center align-middle">
                                                    <div class="d-flex justify-content-center gap-2" role="group">
                                                        @*<a asp-controller="Fournisseur" asp-action="DissocierProduits" asp-route-produitId="@procurer.BoissonId" asp-route-fournisseurId="@Model.Fournisseur.FournisseurId" class="btn btn-danger">
                                                    <i class="bi bi-trash-fill"></i> Supprimer
                                                </a>*@

                                                        <button class="btn btn-danger" onclick="dissocierProduitsDemande(@comprendre.BoissonId, @Model.Demandes.DemandeId,'@type')">
                                                            <i class="bi bi-trash-fill"></i>  Supprimer
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            i++;

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <a class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#staticBackdropAssocier">
                                <i class="bi bi-pin-angle-fill"></i> Demander
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Demande" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-check-circle"></i> OK
                            </a>
                        </div>
                    </div>
                    @*Modal pour associer alimet ou boisson au fournisseur*@
                    <div class="modal fade" id="staticBackdropAssocier" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropAssocierLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content rounded-3 shadow">
                                <div class="modal-body p-4 text-center">
                                    <h5 class="mb-4">Associer produits à la demande</h5>

                                    <div class="row">
                                        <div class="col-6">
                                            <div class="card border-1" style="max-height: 300px; overflow-y: auto;">
                                                <div class="card-header bg-secondary text-black">
                                                    <h5 class="mb-0">Sélection des aliments</h5>
                                                </div>
                                                <div class="card-body p-0">
                                                    <div class="list-group list-group-flush">
                                                        @if (Model.Aliment != null && Model.Aliment.Any())
                                                        {
                                                            @foreach (var aliment in Model.Aliment.OrderBy(b => b.TitreAliment))
                                                            {
                                                                <label class="list-group-item d-flex justify-content-between align-items-center">
                                                                    <div>
                                                                        <input class="form-check-input me-2"
                                                                               type="checkbox"
                                                                               name="selectedAliments"
                                                                               value="@aliment.AlimentId"
                                                                               id="aliment_@aliment.AlimentId">
                                                                        <span>@aliment.TitreAliment</span>
                                                                    </div>
                                                                    <span class="badge bg-warning text-dark me-2">
                                                                        Stock : @aliment.QuantiteStock
                                                                    </span>
                                                                    <input type="number"
                                                                           name="quantities_aliment[@aliment.AlimentId]"
                                                                           class="form-control w-25"
                                                                           min="0"
                                                                           value="0"
                                                                           style="margin-left: 10px;" />
                                                                    @*<span class="badge bg-secondary rounded-pill">@aliment.</span>*@
                                                                </label>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="list-group-item text-muted text-center py-3">
                                                                Aucun aliment disponible
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card border-1" style="max-height: 300px; overflow-y: auto;">
                                                <div class="card-header bg-secondary text-black">
                                                    <h5 class="mb-0">Sélection des boissons</h5>
                                                </div>
                                                <div class="card-body p-0">
                                                    <div class="list-group list-group-flush">
                                                        @if (Model.Boisson != null && Model.Boisson.Any())
                                                        {
                                                            @foreach (var boisson in Model.Boisson.OrderBy(b => b.TitreBoisson))
                                                            {
                                                                <label class="list-group-item d-flex justify-content-between align-items-center">
                                                                    <div>
                                                                        <input class="form-check-input me-2"
                                                                               type="checkbox"
                                                                               name="selectedBoissons"
                                                                               value="@boisson.BoissonId"
                                                                               id="boisson_@boisson.BoissonId">
                                                                        <span>@boisson.TitreBoisson</span>
                                                                    </div>
                                                                    <span class="badge bg-warning text-dark me-2">
                                                                        Stock : @boisson.QuantiteStock
                                                                    </span>
                                                                    <input type="number"
                                                                           name="quantities_boisson[@boisson.BoissonId]"
                                                                           class="form-control w-25"
                                                                           min="0"
                                                                           value="0"
                                                                           style="margin-left: 10px;" />
                                                                    @*<span class="badge bg-secondary rounded-pill">@boisson.CategorieBoisson.TitreCategorieBoisson</span>*@
                                                                </label>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <div class="list-group-item text-muted text-center py-3">
                                                                Aucune boisson disponible
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer flex-nowrap p-0">

                                        <a class="btn btn-lg btn-success fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" onclick="associerSelectionDemande(@Model.Demandes.DemandeId)">Demander</a>
                                        <a class="btn btn-lg btn-danger fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">Annuler</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*<div class="row pt-2">
                <div class="col-6 col-md-3">
                    <a asp-controller="Demande" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
            </div>*@
                </div>
</form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

